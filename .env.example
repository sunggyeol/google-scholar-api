# Google Scholar API Configuration
# Copy this file to .env and update the values

# ========== API Settings ==========
API_TITLE="Google Scholar API"
API_VERSION="1.0.0"
API_DESCRIPTION="REST API for Google Scholar searches with Redis caching"
DEBUG=false
HOST=0.0.0.0
PORT=8000

# ========== Redis Settings ==========
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=true

# ========== Cache TTL Settings (in seconds) ==========
# Scholar search cache: 24 hours (86400 seconds)
CACHE_TTL_SCHOLAR=86400

# Author profile cache: 7 days (604800 seconds)
CACHE_TTL_AUTHOR=604800

# Profile search cache: 12 hours (43200 seconds)
CACHE_TTL_PROFILES=43200

# Citation cache: 30 days (2592000 seconds)
CACHE_TTL_CITE=2592000

# ========== CORS Settings ==========
# Comma-separated list of allowed origins, or "*" for all
CORS_ORIGINS=*

# ========== Rate Limiting (Future Feature) ==========
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
